%h2 Log In
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, class: 'form-control form-narrow'
  .form-group
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: "off", class: 'form-control form-narrow'
  - if devise_mapping.rememberable?
    .form-group
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit "Log In", class: 'btn btn-success'
%br/
= render "devise/shared/links"
